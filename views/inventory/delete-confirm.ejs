<% if (title){ %>
<h1><%= title %></h1>
<%} else { %>
    res.redirect("/"); 
<%}%>
<%- messages() %>
<% if(errors ){ %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
<%- links %>

<p>Confirm Deletion - The delete is permanent.</p>
<form action="/inv/delete/" method="post" id="updateForm">
  <label>
    <span>Make</span>
    <input
      type="text"
      name="inv_make"
      value="<%= locals.inv_make %>"
      required
    />
  </label>

  <label>
    <span>Model</span>
    <input
      type="text"
      name="inv_model"
      value="<%= locals.inv_model %>"
      required
    />
  </label>

  <label
    ><span>Year</span>
    <input
      type="text"
      name="inv_year"
      value="<%= locals.inv_year %>"
      required
    />
  </label>

  <label>
    <span>Price</span>
    <input
      type="number"
      step="0.01"
      name="inv_price"
      value="<%= locals.inv_price %>"
      required
    />
  </label>
  <input
    type="hidden" 
    name="inv_id"
    <% if(locals.inv_id) { %>
  value="<%= locals.inv_id %>" <% } %> />

  <button type="submit">Delete Vehicle</button>
</form>
