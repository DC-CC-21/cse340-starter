<% if (title){ %>
<h1><%= title %></h1>
<%} else { %> res.redirect("/"); <%}%> <%- messages() %> <%-
links %>
<form action="/inv/add-inventory" method="post">
  <label
    ><span>Make</span
    ><input
      type="text"
      name="inv_make"
      value="<%= locals.make %>"
      required
  /></label>
  <label
    ><span>Model</span
    ><input
      type="text"
      name="inv_model"
      value="<%= locals.model %>"
      required
  /></label>
  <label
    ><span>Year</span
    ><input
      type="text"
      name="inv_year"
      value="<%= locals.year %>"
      required
  /></label>
  <label
    ><span>Description</span
    ><input
      type="text"
      name="inv_description"
      value="<%= locals.description %>"
      required
  /></label>
  <label
    ><span>Image</span
    ><input
      type="text"
      name="inv_image"
      value="<%= locals.image? locals.image : "/images/vehicles/no-image.png" %>"
      required
      placeholder="/image/path-to-image.png"
  /></label>
  <label
    ><span>Thumbnail</span
    ><input
      type="text"
      name="inv_thumbnail"
      value="<%= locals.thumbnail? locals.thumbnail : "/images/vehicles/no-image-tn.png" %>"
      required
      placeholder="/images/path-to-thumbnail.png"
  /></label>
  <label
    ><span>Price</span
    ><input
      type="number"
      step="0.01"
      name="inv_price"
      value="<%= locals.price %>"
      required
  /></label>
  <label
    ><span>Miles</span
    ><input
      type="number"
      name="inv_miles"
      value="<%= locals.miles %>"
      required
  /></label>
  <label
    ><span>Color</span
    ><input
      type="text"
      name="inv_color"
      value="<%= locals.color %>"
      required
  /></label>
  <label
    ><span>Classification id</span>
    <select name="classification_id">
      <%-options%>
    </select>
  </label>

  <button type-="submit">Add</button>
</form>
