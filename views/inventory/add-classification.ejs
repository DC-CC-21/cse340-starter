<% if (title){ %>
<h1><%= title %></h1>
<%} else { %> res.redirect("/"); <%}%>
<%- messages() %>  <% if (errors ){ %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
<%- links %>
<form action="/inv/add-classification" method="post">
    <label for="classification_name">
        Classification Name:
        <input type="text" name="classification_name" id="classification_name" required pattern="^\w+" value="<%= locals.classification_name %>">
    </label>
    <button type-="submit">Add</button>
</form>